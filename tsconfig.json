{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.js", "./.eslintrc.cjs", "index.ts"],
  "exclude": ["dist", "node_modules", "_code.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
